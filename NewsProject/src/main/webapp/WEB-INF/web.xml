<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>NewsProject</display-name>
<servlet>
    <servlet-name>WebController</servlet-name>
    <servlet-class>controller.WebController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>WebController</servlet-name>
    <url-pattern>/WebController</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>forwardIndex.jsp</welcome-file>
  </welcome-file-list>
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
  </jsp-config>
</web-app>